<h1>
  {{title}}
</h1>
<form method="POST">
  {{! Input names have to match the name of the fields in the mongo schema object }}
  {{! Mapping is not automatic, but it's best practices }}
  <fieldset>
    <label for="teamname" class="col-2" >
      Team Name:
    </label>
    <input name="teamname" id="teamname" required value="{{team.teamname}}"/>
  </fieldset>
  <fieldset>
    <label for="teamcoach" class="col-2">
      Team Coach:
    </label>
    <input name="teamcoach" id="teamcoach" required value="{{team.teamcoach}}" />
  </fieldset>
  <fieldset>
    <label for="teamleague" class="col-2">
      Team league:
    </label>
 <input name="teamleague" id="teamleague" required value="{{team.teamleague}}" />     
  </fieldset>
  
  {{! Button needs to be inside <form> element to trigger POST }}
  <button class="offset-3 btn btn-primary">
    Save
  </button>
</form>